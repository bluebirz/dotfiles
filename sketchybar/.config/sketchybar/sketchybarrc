# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles
source $HOME/.config/sketchybar/dir_const.sh

ICON_FONT="CommitMono Nerd Font"
ICON_WEIGHT="Bold"
ICON_SIZE="14.0"
ICON_COLOR="0xffffffff"

LABEL_FONT="CommitMono Nerd Font"
LABEL_WEIGHT="Bold"
LABEL_SIZE="13.0"
LABEL_COLOR="0xffffffff"

sketchybar --bar position=top height=24 blur_radius=24 color=0x40000000

default=(
  padding_left=3
  padding_right=3
  icon.font="$ICON_FONT:$ICON_WEIGHT:$ICON_SIZE"
  label.font="$LABEL_FONT:$LABEL_WEIGHT:$LABEL_SIZE"
  icon.color=$ICON_COLOR
  label.color=$LABEL_COLOR
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
)
sketchybar --default "${default[@]}"

source "$ITEM_DIR/apple.sh"
source "$ITEM_DIR/spaces.sh"
source "$ITEM_DIR/apps.sh"

source "$ITEM_DIR/clock.sh"
source "$ITEM_DIR/volume.sh"
source "$ITEM_DIR/battery.sh"
# source "$ITEM_DIR/lang.sh"
source "$ITEM_DIR/wifi.sh"

sketchybar --update
